<!-- app/views/articles/index.html.erb -->
<div class="container">
  <h1>Articles</h1>
  <table class="table">
    <thead>
      <tr>
        <th>Title</th>
        <th>Content</th>
        <th></th>
      </tr>
    </thead>
    <tbody>
      <% @articles.each do |article| %>
        <tr>
          <td><%= article.title %></td>
          <td><%= truncate(article.content, length: 100) %></td>
          <td>
            <%= link_to 'Show', article, class: 'btn btn-primary' %>
            <%= link_to 'Edit', edit_article_path(article), class: 'btn btn-secondary' %>
            <%= link_to 'Destroy', article, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-danger' %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
  <%= link_to 'New Article', new_article_path, class: 'btn btn-success' %>
</div>
